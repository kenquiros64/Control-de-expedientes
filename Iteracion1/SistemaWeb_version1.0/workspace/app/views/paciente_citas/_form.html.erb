<%= form_for([@paciente,@citum]) do |f| %>
  <% if @citum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@citum.errors.count, "error") %> prohibited this citum from being saved:</h2>

      <ul>
      <% @citum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <hr/>
  <div class="row">
    <div class="6u 12u(small)">
      <header>
        <h2>Paciente:</h2>
        <p> <%= @paciente.nombre %><%= " " %><%= @paciente.apellido1 %><%= " " %><%= @paciente.apellido2 %></p>
      </header>
    </div>
      
    <div class="6u$ 12u$(small)">
      <header>
        <h2>Médico encargado:</h2>
        <p> <%= current_medico.nombre %><%= " " %><%= current_medico.apellido1 %><%= " " %><%= current_medico.apellido2 %></p>
      </header>
      
    </div>
   </div> 
    <div class="row">
  
      <div class="6u 12u(small)">
        <div class="field">
          <%= f.label :fecha, 'Fecha:'%>
          <%= f.date_select :fecha, order: [:day, :month, :year ], prompt: { day: 'Día', month: 'Mes', year: 'Año'}, start_year: Date.today.year + 100, end_year: Date.today.year - 50 , :class => "form-control" %>
        </div>
      </div>
  
      <div class="6u$ 12u(small)">
        <div class="field">
          <%= f.label :hora, 'Hora:'%>
          <%= f.time_select :hora, order: [:hour,:minute ], prompt: { hour: "Hora", minute:"Minutos" },  ampm: true , :class => "form-control" %>
        </div>
      </div>
    </div>
  
  <hr/>
  <div class="actions">
    <%= f.submit "Finalizar", :class => "button special" %>
  </div>
<% end %>
